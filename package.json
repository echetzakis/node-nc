{
  "name": "node-nc",
  "version": "0.0.3",
  "description": "Node console. A rails inspired command line for node.",
  "main": "build/index.js",
  "keywords": [
    "console",
    "async",
    "profiler"
  ],
  "scripts": {
    "build": "rm -rf ./build && tsc -p .",
    "watch": "rm -rf ./build && tsc -w -p .",
    "prepublish": "npm run build && npm test",
    "pretest": "tslint src/*.ts && npm run build",
    "test": "istanbul test ./node_modules/.bin/_mocha build/test/**.js --  -R spec",
    "posttest": "remap-istanbul -i coverage/coverage.json -o coverage/lcov-report -t html"
  },
  "bin": {
    "nc": "build/index.js"
  },
  "repository": "nikostoulas/node-c",
  "author": "Nikos Kostoulas <nikostoulas@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "glob": "^7.1.1"
  },
  "typings": "build/index",
  "devDependencies": {
    "@types/log4js": "0.0.32",
    "@types/mocha": "2.2.32",
    "@types/node": "7.0.3",
    "@types/should": "8.1.30",
    "@types/sinon": "1.16.30",
    "@types/source-map-support": "0.2.28",
    "@types/supertest": "1.1.31",
    "istanbul": "0.4.4",
    "mocha": "3.0.2",
    "remap-istanbul": "0.6.4",
    "should": "10.0.0",
    "sinon": "1.17.5",
    "source-map-support": "^0.4.5",
    "tslint": "4.1.0",
    "typescript": "2.1.5"
  }
}
